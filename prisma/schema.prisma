generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Village {
  id        String   @id @default(cuid())
  name      String
  desc      String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model ProjectMember {
  id        String   @id @default(cuid())
  isAdmin   Boolean  @default(false)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model UserLog {
  id        String   @id @default(cuid())
  action    String?
  desc      String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model UserRole {
  id        String   @id @default(cuid())
  name      String
  desc      String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model User {
  id        String   @id @default(cuid())
  nik       String   @unique
  phone     String   @unique
  name      String
  email     String?  @unique
  password  String?
  gender    String?
  img       String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Project {
  id        String   @id @default(cuid())
  name      String
  desc      String?  @db.Text
  progress  Float?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model ProjectComment {
  id        String   @id @default(cuid())
  comment   String   @db.Text
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model ProjectFile {
  id        String   @id @default(cuid())
  filename  String
  path      String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Possision {
  id        String   @id @default(cuid())
  name      String
  desc      String?  @db.Text
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Group {
  id        String   @id @default(cuid())
  name      String
  desc      String?  @db.Text
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Division {
  id        String   @id @default(cuid())
  name      String
  desc      String?  @db.Text
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model DivisionMember {
  id        String   @id @default(cuid())
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model DivisionDocumentFolderFile {
  id        String   @id @default(cuid())
  filename  String
  path      String?
  ext       String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model DivisionDocumentShare {
  id        String   @id @default(cuid())
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model DivisionCalendarEvent {
  id               String    @id @default(cuid())
  title            String
  desc             String?   @db.Text
  dateStart        DateTime?
  dateEnd          DateTime?
  repeatEventType  String?
  reminderInterval String?
  status           Int?
  isActive         Boolean   @default(true)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @default(now())
}

model DivisionCalendarReminder {
  id        String    @id @default(cuid())
  dateStart DateTime?
  dateEnd   DateTime?
  status    Int
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now())
}

model DivisionDiscussion {
  id        String   @id @default(cuid())
  title     String
  desc      String?  @db.Text
  status    Int
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model DivisionProject {
  id        String   @id @default(cuid())
  title     String
  desc      String?  @db.Text
  status    Int?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model DivisionProjectTask {
  id        String    @id @default(cuid())
  title     String
  desc      String?   @db.Text
  status    Int
  dateStart DateTime?
  dateEnd   DateTime?
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now())
}

model DivisionProjectFile {
  id        String   @id @default(cuid())
  filename  String
  path      String?
  ext       String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model DivisionProjectMember {
  id        String   @id @default(cuid())
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model DivisionDiscussionComment {
  id        String   @id @default(cuid())
  comment   String   @db.Text
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model DivisionCalendarMember {
  id        String   @id @default(cuid())
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model TypeEventCalendar {
  id        String   @id @default(cuid())
  name      String
  desc      String?  @db.Text
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}
